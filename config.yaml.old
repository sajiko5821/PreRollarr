plex:
  url: http://IP:PORT # URL to your Plex server
  token: TOKEN # Your Plex token

# Always include these pre-rolls
always:
  enabled: true
  # paths:
  # - "/tests/PreRoll/xmas/frost.mp4"
  path_globbing:
    enabled: true
    pairs:
      - root_path: /files
        plex_path: /tests/PreRoll
        patterns:
          - "/files/*.mp4"
          - "/files/*.mov"
          - "/files/*.mkv"
  count: 1 # Optional, randomly select X many videos from the list rather than all of them
  weight: 1 # Optional, how much to emphasize these pre-rolls over others (higher = more likely to play)

# Schedule prerolls by date and time frames
date_range:
  enabled: true
  ranges:
    - name: "Valentines"
      start_date: xxxx-02-14
      end_date: xxxx-02-15
      path_globbing:
        enabled: true
        pairs:
          - root_path: /files
            plex_path: /tests/PreRoll
            patterns:
              - "/files/valentine/*.mp4"
              - "/files/valentine/*.mov"
              - "/files/valentine/*.mkv"
      disable_always: true
      count: 1
    - name: "Easter"
